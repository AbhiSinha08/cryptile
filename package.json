{
  "name": "cryptile",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@tauri-apps/api": "^1.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run tailwind_build && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "tailwind": "tailwindcss -c src/tailwind.config.js -i src/assets/tailwind.css -o src/output.css --watch",
    "tailwind_build": "tailwindcss -c src/tailwind.config.js -i src/assets/tailwind.css -o src/output.css --minify"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "tailwindcss": "^3.1.8"
  }
}
